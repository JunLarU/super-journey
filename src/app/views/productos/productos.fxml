<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controllers.productos.ProductosController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #F9FAFB;">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15;">
            <Label text="🍔 Productos" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtBuscar" promptText="Buscar producto..." style="-fx-pref-width: 250px;"/>
            <Button fx:id="btnRecargar" text="🔄" onAction="#cargarProductos"/>
            <Button fx:id="btnNuevo" text="➕ Nuevo" onAction="#onNuevoClicked"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <TableView fx:id="tablaProductos" prefHeight="480">
                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                    <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="120"/>
                    <TableColumn fx:id="colPrecio" text="Precio Base" prefWidth="100"/>
                    <TableColumn fx:id="colDisponible" text="Disponible" prefWidth="100"/>
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="120"/>
                </columns>
            </TableView>
            <Label fx:id="lblEstado" text="Cargando productos..." style="-fx-text-fill: gray;"/>
        </VBox>
    </center>
</BorderPane>
