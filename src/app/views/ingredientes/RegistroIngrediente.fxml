<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controllers.ingredientes.RegistroIngredienteController"
      spacing="10"
      alignment="TOP_CENTER"
      style="-fx-background-color: white; -fx-padding: 20;">

    <children>

        <Label text="Registro de Ingrediente"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints prefWidth="300"/>
            </columnConstraints>

            <!-- Campos -->
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre" promptText="Ej: Queso panela" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescripcion" promptText="Ej: Queso fresco bajo en grasa" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Categoría:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbCategoria" promptText="Seleccionar categoría" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Calorías (kcal):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCalorias" promptText="Ej: 120.0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Alergeno:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <CheckBox fx:id="chkAlergeno" text="Contiene alérgenos" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <Button fx:id="btnRegistrar"
                text="Registrar Ingrediente"
                onAction="#onRegistrarClicked"
                prefWidth="220"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;"/>

        <Label fx:id="lblStatus"
               text="Esperando datos..."
               style="-fx-text-fill: #333; -fx-font-size: 14px; -fx-padding: 10 0 0 0;"/>
    </children>
</VBox>
